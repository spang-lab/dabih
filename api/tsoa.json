{
  "entryFile": "src/server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/api/**/controller.ts"
  ],
  "spec": {
    "outputDirectory": "build",
    "specFileBaseName": "spec",
    "specVersion": 3,
    "securityDefinitions": {
      "api_key": {
        "type": "http",
        "name": "Authorization",
        "scheme": "bearer"
      },
      "jwt": {
        "type": "oauth2",
        "flow": "accessCode",
        "scopes": {
          "admin": "Allow the user to perfmorm all actions in dabih",
          "dataset": "Allow access to the dataset API",
          "key": "Allow the user to add public keys",
          "token": "Allow the user to generate access tokens",
          "upload": "Allow the user to upload files"
        }
      }
    },
    "specMerging": "recursive",
    "spec": {
      "paths": {
        "/upload/{mnemonic}/chunk": {
          "put": {
            "requestBody": {
              "content": {
                "multipart/form-data": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "chunk": {
                        "type": "string",
                        "format": "binary"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "routes": {
    "routesDir": "build",
    "middleware": "koa",
    "authenticationModule": "./src/auth.ts"
  }
}
