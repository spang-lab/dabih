// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  sub       String      @unique
  name      String
  email     String
  keys      PublicKey[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model PublicKey {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  hash      String    @unique
  data      String
  isRootKey Boolean
  enabled   DateTime?
  enabledBy String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model FileData {
  id        Int      @id @default(autoincrement())
  uid       String   @unique
  createdBy String
  fileName  String
  filePath  String?
  hash      String?
  size      Int?
  keyHash   String
  chunks    Chunk[]
  inodes    Inode[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chunk {
  id        Int      @id @default(autoincrement())
  data      FileData @relation(fields: [dataId], references: [id])
  dataId    Int
  hash      String
  iv        String
  start     Int
  end       Int
  crc       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Inode {
  id        Int       @id @default(autoincrement())
  mnemonic  String    @unique
  type      Int
  name      String
  tag       String?
  data      FileData? @relation(fields: [dataId], references: [id])
  dataId    Int?
  parent    Inode?    @relation("InodeTree", fields: [parentId], references: [id])
  parentId  Int?
  children  Inode[]   @relation("InodeTree")
  members   Member[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  keys      Key[]
}

model Member {
  id         Int      @id @default(autoincrement())
  sub        String
  Inode      Inode    @relation(fields: [inodeId], references: [id])
  inodeId    Int
  permission Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([sub, inodeId])
}

model Key {
  id        Int      @id @default(autoincrement())
  inode     Inode    @relation(fields: [inodeId], references: [id])
  inodeId   Int
  hash      String
  key       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Token {
  id        Int       @id @default(autoincrement())
  value     String    @unique
  sub       String
  scope     String
  exp       DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
