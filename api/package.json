{
  "name": "dabih-api",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:tsoa": "tsoa spec-and-routes --basePath /api/v1",
    "build:docs": "redocly build-docs -o ./build/index.html ./build/spec.json",
    "build:client": "node --import tsx/esm src/client.ts",
    "build": "npm run build:tsoa && npm run build:docs && npm run build:client",
    "dev:startdb": "docker start pg-dabih || docker run -d --name pg-dabih -p 5432:5432 -v \"./data/postgres:/var/lib/postgresql/data\"  --env-file .env.dev postgres:16-alpine",
    "dev:stopdb": "docker stop pg-dabih && docker rm pg-dabih",
    "dev:start": "dotenv -e .env.dev -- node --import tsx/esm src/server.ts",
    "dev": "npm run build && npm run dev:startdb && npm run dev:start",
    "dev:migrate": "dotenv -e .env.dev -- prisma migrate dev",
    "test:startdb": "docker run -d --name pg-dabih-test -p 15432:5432 --env-file .env.test postgres:16-alpine",
    "test:stopdb": "docker stop pg-dabih-test && docker rm pg-dabih-test",
    "test:clean": "source .env.test && rm -rf $TEST_FOLDER/*",
    "test:prepare": "dotenv -e .env.test prisma migrate deploy",
    "test:api": "dotenv -e .env.test ava --serial",
    "test": "npm run test:clean && npm run test:startdb && sleep 3 && npm run test:prepare && npm run test:api ; npm run test:stopdb"
  },
  "author": "Michael Huttner",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^20.14.2",
    "ava": "^6.1.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "openapi-typescript": "^7.0.0-rc.0",
    "prisma": "^5.15.0",
    "tsx": "^4.15.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.12.0"
  },
  "dependencies": {
    "@ava/get-port": "^2.0.0",
    "@fastify/busboy": "^2.1.1",
    "@keyv/memcache": "^1.4.1",
    "@keyv/redis": "^2.8.5",
    "@koa/router": "^12.0.1",
    "@prisma/client": "^5.15.0",
    "@redocly/cli": "^1.14.0",
    "crc": "^4.3.2",
    "jsonwebtoken": "^9.0.2",
    "keyv": "^4.5.4",
    "koa": "^2.15.3",
    "koa-body": "^6.0.1",
    "openapi-fetch": "^0.9.7",
    "tsoa": "^6.3.0",
    "winston": "^3.13.0"
  },
  "ava": {
    "nodeArguments": [
      "--import=tsx"
    ],
    "extensions": {
      "ts": "commonjs"
    },
    "files": [
      "./**/*.test.ts"
    ]
  },
  "imports": {
    "#lib/*": "./src/lib/*.ts",
    "#util/*": "./src/lib/util/*.ts",
    "#crypto": "./src/lib/crypto/index.ts"
  }
}
